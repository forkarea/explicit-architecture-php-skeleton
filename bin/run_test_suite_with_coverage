#!/usr/bin/env php
<?php

$rootDir = __DIR__ . '/..';
$returnVal = 0;

$env = getenv('ENV') ?: 'dev';

$command = 'php -dzend_extension=xdebug.so vendor/bin/phpunit --coverage-text --coverage-clover=coverage.clover.xml';
switch ($env) {
    case 'dev':
        system(
            "docker-compose -f $rootDir/build/container/$env/docker-compose.yml run --rm app " . $command,
            $returnVal
        );
        system("docker-compose -f $rootDir/build/container/$env/docker-compose.yml down");
        break;
    default:
        system($command, $returnVal);
}

exit($returnVal);
