#!/usr/bin/env php
<?php

$rootDir = __DIR__ . '/..';
$returnVal = 0;

$env = getenv('ENV') ?: 'dev';

switch ($env) {
    case 'dev':
        $command = 'php bin/console server:run';
        system(
            "docker-compose -f $rootDir/storage/container/docker-compose.yml run -p 8000:8000 --rm app " . $command,
            $returnVal
        );
        system("docker-compose -f $rootDir/storage/container/docker-compose.yml down");
        break;
    default:
        $command = 'php bin/console server:run';
        system($command, $returnVal);
}

exit($returnVal);
